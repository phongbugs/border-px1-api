{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "BORDER PX1 API",
    "description": "BORDER PX1 API demo server",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "tags": [
    {
      "name": "BORDER PX1 API",
      "description": "API for BORDER PX1 API"
    }
  ],
  "servers": [
    {
      "url": "http://localhost:9999",
      "description": "Development server"
    },
    {
      "url": "https://border-px1-api.herokuapp.com",
      "description": "Test server"
    },
    {
      "url": "https://border-px1-api.xyz",
      "description": "Production server"
    }
  ],
  "paths": {
    "/user/login": {
      "post": {
        "tags": [
          "BORDER PX1 API"
        ],
        "summary": "Login to White Labels Management site",
        "description": "Login white label management site",
        "requestBody": {
          "description": "the password use to login border-px1-api",
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginResponse"
                }
              }
            }
          }
        }
      }
    },
    "/user/login/status": {
      "post": {
        "tags": [
          "BORDER PX1 API"
        ],
        "summary": "Check has the user logged in yet",
        "parameters": [
          {
            "name": "border-px1-api",
            "in": "cookie",
            "required": true,
            "description": "The cookie of border-px1-api",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login Status response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginStatusResponse"
                }
                
              }
            }
          }
        }
      }
    },
    "/authentication/": {
      "post": {
        "tags": [
          "BORDER PX1 API"
        ],
        "summary": "Authenticate to BORDER-PX1 site",
        "description": "Login BORDER PX1 site by its account",
        "requestBody": {
          "description": "A encrypted string from username & password & url of BORDER PX1(encrypted RSA algorithm)",
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "authenticationData": {
                    "type": "string"
                  }
                },
                "required": [
                  "authenticationData"
                ]
              }
            }
          }
        },
        "security": [],
        "responses": {
          "200": {
            "description": "Authentiaction successfully",
            "headers": {
              "Set-Cookie": {
                "schema": {
                  "type": "string",
                  "example": "border-px1=abcde12345; Path=/; HttpOnly"
                },
                "description": "a cookie string of border-px1"
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/authenticationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/authentication/status": {
      "get": {
        "tags": [
          "BORDER PX1 API"
        ],
        "summary": "Check whether has cookie been expired yet",
        "description": "Check whether has cookie been expired yet",
        "parameters": [
          {
            "name": "border-px1",
            "in": "cookie",
            "required": true,
            "description": "The authenticated cookie",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status of cookie",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/authenticationStatusResponse"
                }
              }
            }
          }
        }
      }
    },
    "/info/backendId/{serverIp}": {
      "post": {
        "tags": [
          "BORDER PX1 API"
        ],
        "summary": "Create a backendId for browsing page to specific server",
        "parameters": [
          {
            "name": "serverIp",
            "in": "path",
            "required": true,
            "description": "ID of server",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "border-px1",
            "in": "query",
            "required": true,
            "description": "aunthenticated cookie",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get backendId successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/backendIdResponse"
                }
              }
            }
          }
        }
      }
    },
    "/info/domain/{siteName}": {
      "get": {
        "tags": [
          "BORDER PX1 API"
        ],
        "summary": "Get all domains name of site name",
        "parameters": [
          {
            "name": "siteName",
            "in": "path",
            "required": true,
            "description": "Name of site\n Ex:\n- Agent : ag.winning228.bpx\n- Mobile: mo.winning228.bpx\n- Member: winning228.bpx",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "cookie",
            "in": "cookie",
            "required": true,
            "description": "aunthenticated cookie",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get domains successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/domainResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "backendIdResponse": {
        "required": [
          "success"
        ],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "backendId": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "authenticationResponse": {
        "required": [
          "success"
        ],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "cookie": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "authenticationStatusResponse": {
        "required": [
          "status"
        ],
        "properties": {
          "success": {
            "type": "boolean"
          }
        }
      },
      "authenticatedCookieResponse": {
        "required": [
          "border-px1"
        ],
        "properties": {
          "border-px1": {
            "type": "string"
          }
        }
      },
      "loginResponse": {
        "required": [
          "success"
        ],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "token": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "loginStatusResponse": {
        "required": [
          "success"
        ],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "domainResponse": {
        "required": [
          "ID",
          "Domain",
          "LastUpdate"
        ],
        "properties": {
          "ID": {
            "type": "number",
            "uniqueItems": true
          },
          "Domain": {
            "type": "string"
          },
          "EnableWWW": {
            "type": "number"
          },
          "RootValid": {
            "type": "number"
          },
          "HTTPS": {
            "type": "number"
          },
          "LastUpdate": {
            "type": "string"
          },
          "ServerTime": {
            "type": "string"
          },
          "LastChecked": {
            "type": "string"
          }
        }
      }
    }
  }
}
